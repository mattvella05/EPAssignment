@model MatthewVellaEPSolution.Domain.Poll

@{
    ViewData["Title"] = "Create Poll";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Option1Text" class="control-label"></label>
        <input asp-for="Option1Text" class="form-control" />
        <span asp-validation-for="Option1Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Option1VotesCount" class="control-label"></label>
        <input asp-for="Option1VotesCount" class="form-control" type="number" value="0" />
        <span asp-validation-for="Option1VotesCount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Option2Text" class="control-label"></label>
        <input asp-for="Option2Text" class="form-control" />
        <span asp-validation-for="Option2Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Option2VotesCount" class="control-label"></label>
        <input asp-for="Option2VotesCount" class="form-control" type="number" value="0" />
        <span asp-validation-for="Option2VotesCount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Option3Text" class="control-label"></label>
        <input asp-for="Option3Text" class="form-control" />
        <span asp-validation-for="Option3Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Option3VotesCount" class="control-label"></label>
        <input asp-for="Option3VotesCount" class="form-control" type="number" value="0" />
        <span asp-validation-for="Option3VotesCount" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Poll</button>
</form>

<a href="@Url.Action("Index")">Back to Poll List</a>
